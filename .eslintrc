{
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "arrowFunctions": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-multi-spaces": 0,
    "eqeqeq": 0,
    "curly": 2,
    "quotes": [
      0,
      "single"
    ],
    "camelcase": [1, {"properties": "always"}]
  },
  "plugins": [
    "react"
  ]
}